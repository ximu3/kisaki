{
  "extends": "../../tsconfig.base.json",
  "include": [
    "env.d.ts",
    "electron.vite.config.*",
    "src/main/**/*",
    "src/main/**/*.json",
    "src/preload/**/*",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "types": ["node", "electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
