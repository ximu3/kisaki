{
  "name": "create-kisaki-plugin",
  "version": "0.0.1",
  "description": "Scaffolding tool to create Kisaki plugins",
  "type": "module",
  "bin": {
    "create-kisaki-plugin": "./dist/index.mjs"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@kisaki/plugin-sdk": "workspace:*",
    "@tanstack/vue-virtual": "^3.13.18",
    "@types/node": "^22.19.1",
    "@types/prompts": "^2.4.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "drizzle-orm": "^0.45.1",
    "electron": "^39.2.6",
    "electron-log": "^5.4.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.2.0",
    "i18next": "^25.7.1",
    "jiti": "^2.4.2",
    "pinia": "^3.0.4",
    "prettier": "^3.5.3",
    "reka-ui": "^2.7.0",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^7.2.6",
    "vue": "^3.5.26",
    "vue-eslint-parser": "^10.1.3",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.2.2"
  },
  "keywords": [
    "kisaki",
    "plugin",
    "create",
    "scaffolding"
  ],
  "license": "MIT"
}
